<% if current_user %>
  <%= form_for [@user, @item] do |f| %>
    <div class="form-group">
      <%= f.text_field :name, class: 'form-control', placeholder: "Enter Task/Item" %>
    </div>
    <%= f.submit "Add your task to you're never ending list of things to do", class: 'btn btn-success' %>
  <% end %>
<% end %>
